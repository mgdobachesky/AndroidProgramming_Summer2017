<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.implicitintent.MainActivity" tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnShowLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Location"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="138dp"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/btnListContacts"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnCaptureImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture Image"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btnShowLocation"
            android:layout_alignEnd="@+id/btnShowLocation"
            android:layout_marginTop="187dp" />

        <Button
            android:id="@+id/btnListContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List All Contacts"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginTop="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnCaptureImage"
            android:layout_alignStart="@+id/btnCaptureImage" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
